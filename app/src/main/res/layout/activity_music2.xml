<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="160dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="80dp">


                    <ImageView
                        android:layout_width="100dp"
                        android:id="@+id/add_logo"
                        android:layout_weight="1"
                        android:src="@drawable/final_logo"
                        android:layout_height="match_parent" />
<LinearLayout
    android:layout_width="200dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Message and Enter Otp"
        android:id="@+id/add_title"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="@color/md_black_1000"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Message and Enter Otp"
        android:id="@+id/add_description"
        android:maxLines="2"
        android:padding="@dimen/padding_5"
        android:textSize="14sp"
        android:textColor="@color/md_black_1000"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</LinearLayout>
                    <ImageView
                        android:layout_width="100dp"
                        android:src="@drawable/download2"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:id="@+id/install"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="140dp"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@drawable/oldsongs"-->
                    <!--android:id="@+id/imageView" />-->

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/center"
                    android:scaleType="fitXY"
                    android:src="@drawable/b"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp" />
            </RelativeLayout>
            <include layout="@layout/content_scrollingsongslist2"
                android:id="@+id/include" />

            <!--android:scrollbarThumbVertical="@drawable/scrollbar"-->
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
