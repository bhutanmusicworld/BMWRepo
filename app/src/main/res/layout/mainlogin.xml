<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:gravity="center"
        android:id="@+id/list_empty"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="32.0dip"
            android:paddingRight="32.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="130dip"
                android:layout_height="130dip"
                android:src="@drawable/final_logo"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="17.0sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:paddingTop="20.0dip"
                android:paddingBottom="20.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Please wait . . . ."
                style="@style/textMediumWhite" />
            <TextView
                android:textSize="17.0sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:paddingTop="20.0dip"
                android:paddingBottom="20.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Welcome To B music World"
                style="@style/textMediumWhite" />
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/header"
                    app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">
                    <ImageView
                        android:layout_width="@dimen/song_img"
                        android:gravity="start"
                        android:src="@drawable/final_logo"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_height="@dimen/width_260"
                android:id="@+id/rl"
                android:background="#b7b7b7">
                <ImageView
                    android:layout_width="@dimen/play_logo"
                    android:layout_height="@dimen/play_logo"
                    android:id="@+id/i"
                    android:src="@drawable/mainplay"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/padding_20" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/i"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Bmusicworld pro"
                        android:layout_marginTop="@dimen/padding_text"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Log in to Download Music."
                        android:textSize="@dimen/title_text_size"
                        android:layout_marginTop="@dimen/padding_text"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Save Data"
                        android:layout_marginTop="2dp"
                        android:textSize="@dimen/title_text_size"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/rl"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="sign up or log in with "
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/padding_20"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_blue"
                    android:layout_marginRight="20dp"
                    android:layout_height="@dimen/action_img_h">
                    <!--<com.facebook.login.widget.LoginButton-->
                    <!--xmlns:fb="http://schemas.android.com/apk/res-auto"-->
                    <!--style="@style/FacebookLoginButton"-->
                    <!--android:gravity="center"-->
                    <!--android:id="@+id/login_button"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:background="@drawable/rounded_blue"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:visibility="gone"-->
                    <!--/>-->
                    <Button
                        android:layout_width="match_parent"
                        android:text="Login with facebook"
                        android:id="@+id/login_button"
                        android:onClick="fbLogin"
                        android:paddingLeft="30dp"
                        android:textSize="@dimen/title_text_size"
                        android:textColor="@color/white"
                        android:paddingRight="40dp"
                        android:drawableLeft="@drawable/facebooklogo"
                        android:background="@drawable/rounded_blue"
                        android:layout_height="match_parent"/>
                </RelativeLayout>


                <Button
                    android:layout_width="match_parent"
                    android:text="mobile number"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="30dp"
                    android:onClick="openMobile"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size"
                    android:paddingRight="40dp"
                    android:drawableLeft="@drawable/dail"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_gray"
                    android:layout_height="@dimen/action_img_h"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text=" or use your email "
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/action_img_h">
                    <Button
                        android:layout_width="@dimen/width_150"
                        android:text="log in"
                        android:onClick="openLogin"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_orange"
                        android:layout_height="match_parent"/>
                    <Button
                        android:layout_width="@dimen/width_150"
                        android:text="sign up"
                        android:onClick="openRegister"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_yellow"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>