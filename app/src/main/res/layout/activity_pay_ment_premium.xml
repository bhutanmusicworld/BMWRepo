<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/header"
                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:src="@drawable/final_logo"
                    android:layout_height="50dp" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/mylayout"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/block_payment"
                android:id="@+id/rl"
                android:background="#b7b7b7">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/i"
                    android:src="@drawable/final_logo"
                    android:layout_above="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/padding_20"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Download Your Favourite Music."
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/textView" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/butn"
                android:layout_below="@+id/rl"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_20"
                    android:textSize="10dp"
                    android:textColor="@android:color/black"
                    android:text="CHOOSE Premium PLAN"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/pgroup"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:id="@+id/preid"
                            android:text="Premium Model"
                            android:gravity="center"
                            android:button="@android:color/transparent"
                            android:textColor="@color/white"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/rounded_yellow"
                            android:layout_height="40dp" />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/padding_20"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/group"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="90dp"
                            android:text="1"
                            android:button="@android:color/transparent"
                            android:id="@+id/onemon"
                            android:textSize="50dp"
                            android:background="@drawable/mybutton"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_height="70dp" />

                        <RadioButton
                            android:layout_width="90dp"
                            android:text="3"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/mybutton"
                            android:id="@+id/twomon"
                            android:button="@android:color/transparent"
                            android:textSize="50dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_height="70dp"/>

                        <RadioButton
                            android:layout_width="90dp"
                            android:text="9"
                            android:button="@android:color/transparent"
                            android:textSize="50dp"
                            android:background="@drawable/mybutton"
                            android:id="@+id/threemon"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_height="70dp" />

                    </RadioGroup>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/month"
                    android:layout_marginRight="@dimen/month"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="month"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="month"
                        android:layout_marginLeft="@dimen/month_padding"
                        android:layout_marginRight="@dimen/month_padding"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="month"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="end"
                    android:id="@+id/llayout"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:text="Your monthly rate is"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:id="@+id/rate"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Nu. 99/month."
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="150dp"
                android:background="@null"
                android:id="@+id/conti"
                android:layout_marginTop="@dimen/padding_20"
                android:textColor="@color/colorPrimary"
                android:text="Continue"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butn"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </ScrollView>
</LinearLayout>