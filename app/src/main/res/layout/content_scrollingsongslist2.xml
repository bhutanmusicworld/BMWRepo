<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:showIn="@layout/activity_music"
    android:descendantFocusability="blocksDescendants"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="Album-2017-10 songs"
        android:gravity="center"
        android:id="@+id/listtitle"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/stickyView"
        android:layout_gravity="center"
        android:padding="@dimen/padding_5"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="140dp"
            android:text="Play All"
            android:paddingRight="20dp"
            android:drawableStart="@drawable/aplay"
            android:id="@+id/plays_all"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:background="@drawable/rounded_yellow"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/aplay" />
        <Button
            android:layout_width="140dp"
            android:text="Download All"
            android:paddingLeft="5dp"
            android:clickable="true"
            android:id="@+id/download_all"
            android:drawableStart="@drawable/download"
            android:drawableLeft="@drawable/download"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_yellow"
            android:layout_height="40dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/mylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:fadingEdge="none"
        />
</LinearLayout>