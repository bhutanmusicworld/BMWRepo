<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dragView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/image_songAlbumArtBlur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/final_logo" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDFFFFFF">
        <RelativeLayout android:id="@+id/relative"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <com.bmusic.bmusicworld.widgets.CircleImageView
                android:id="@+id/image_songAlbumArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/final_logo"
                app:border_color="@color/md_orange_700"
                app:border_width="10dp" app:shadow="true"
                app:shadow_color="@color/md_orange_700"
                app:shadow_radius="10" />
            <ProgressBar
                android:id="@+id/pgCenterCircle"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:visibility="invisible" />
        </RelativeLayout>
        <LinearLayout android:id="@+id/layout_media_info"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_5">
            <TextView android:id="@+id/text_songName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Fev Songs"
                android:textColor="@color/md_blue_grey_700"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView android:id="@+id/text_songAlb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Fev Album"
                android:textColor="@color/md_blue_grey_700"
                android:textSize="14sp" android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/butn"
            android:layout_below="@+id/layout_media_info"
            android:layout_gravity="center"
            android:padding="@dimen/padding"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="@dimen/width_150"
                android:text="Play All"
                android:id="@+id/plays"
                android:textSize="@dimen/title_text_size"
                android:paddingLeft="@dimen/padding_20"
                android:drawableStart="@drawable/aplay"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/rounded_orange"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/aplay" />
            <Button android:layout_width="@dimen/width_150"
                android:text="Download"
                android:paddingLeft="@dimen/padding_20"
                android:id="@+id/download"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/padding_20"
                android:drawableStart="@drawable/download"
                android:drawableLeft="@drawable/download"
                android:background="@drawable/rounded_yellow"
                android:layout_height="40dp" />
        </LinearLayout>
        <include android:id="@+id/bottom_palyLayout"
            layout="@layout/include_slidepanelchildtwo_bottomview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="vertical" />
        <include android:id="@+id/slideBottomView"
            layout="@layout/include_slidepanelchildtwo_topviewtwo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>